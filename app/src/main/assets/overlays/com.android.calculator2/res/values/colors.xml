<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Default background color for the status bar. -->
    <color name="calculator_accent_color">@*common:color/p900</color>

    <!-- Color to indicate an error has occured. -->
    <color name="calculator_error_color">@*common:color/s500</color>

    <!-- Background color of the calculator display. -->
    <color name="display_background_color">@android:color/white</color>

    <!-- Text color for the formula in the calculator display. -->
    <color name="display_formula_text_color">@*common:color/s500</color>

    <!-- Text color for the result in the calculator display. -->
    <color name="display_result_text_color">@*common:color/s900</color>

    <!-- Background color for the numeric pad. -->
    <color name="pad_numeric_background_color">@*common:color/p800</color>

    <!-- Background color for the operator pad. -->
    <color name="pad_operator_background_color">@*common:color/p900</color>

    <!-- Background color for the advanced pad. -->
    <color name="pad_advanced_background_color">@*common:color/s500</color>

    <!-- Ripple color when a button is pressed in a pad. -->
    <color name="pad_button_ripple_color">@*common:color/p950</color>

    <!-- Ripple color when a button is pressed in a pad. -->
    <color name="pad_button_advanced_ripple_color">@*common:color/s900</color>

    <color name="pad_button_text_color">@android:color/white</color>
    <color name="pad_button_advanced_text_color">@android:color/white</color>

    <color name="pad_advanced_text_color_normal">#91ffffff</color>
    <color name="pad_advanced_text_color_disabled">#33ffffff</color>

    <!-- Floating graph colors -->
    <color name="graph_grid_color">@*common:color/grey</color>
    <color name="graph_line_color">@*common:color/s500</color>
</resources>