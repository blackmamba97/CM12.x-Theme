<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="theme_primary">@*common:color/p900</color>
    <color name="theme_primary_dark">@*common:color/p950</color>
    <color name="theme_accent">@*common:color/s500</color>

    <!-- MATERIAL DARK THEME -->
    <!-- Background -->
    <color name="base_material_dark_theme">#13191C</color>
    <color name="candidate_material_dark_theme">#13191C</color>
    <!-- Lighter Keys -->
    <color name="key_bordered_dark_theme">#393F4D</color>
    <color name="key_pressed_bordered_dark_theme">@*common:color/s500</color>
    <!-- Darker Keys -->
    <color name="key_dark_bordered_dark_theme">#232731</color>
    <color name="key_dark_pressed_bordered_dark_theme">@*common:color/s500</color>
    <!-- Enter -->
    <color name="key_action_bordered_dark_theme">@*common:color/s500</color>
    <color name="key_action_pressed_bordered_dark_theme">@*common:color/s900</color>
    <!-- Divider -->
    <color name="header_bottom_separator_material_dark_theme">#232731</color>
    <!-- Popup -->
    <color name="popup_background_material_dark_theme">@*common:color/s500</color>
    <color name="label_popup_pressed_material_dark_theme">@*common:color/s900</color>
    <!-- Track -->
    <color name="ColorGestureTrackMaterialDarkTheme">@*common:color/s500</color>
    <color name="ColorChordedTrackMaterialDarkTheme">@*common:color/s500</color>
    <!-- Circle -->
    <drawable name="ic_key_ime_action_back_material_dark_theme">@drawable/ic_circle</drawable>
    <drawable name="ic_key_ime_action_back_pressed_material_dark_theme">@drawable/ic_circle</drawable>
    <!-- Shift -->
    <drawable name="ic_bar_green_material_dark_theme">@drawable/ic_bar</drawable>
    <drawable name="ic_key_shift_narrow_on_material_dark">@drawable/ic_shift</drawable>

    <!-- MATERIAL LIGHT THEME -->
    <!-- Enter -->
    <color name="key_action_bordered_light_theme">@*common:color/s500</color>
    <color name="key_action_pressed_bordered_light_theme">@*common:color/s900</color>
    <!-- Popup -->
    <color name="label_popup_pressed_material_light_theme">@android:color/white</color>
    <!-- Track -->
    <color name="ColorGestureTrackMaterialLightTheme">@*common:color/s500</color>
    <color name="ColorChordedTrackMaterialLightTheme">@*common:color/s500</color>
    <!-- Circle -->
    <drawable name="ic_key_ime_action_back_material_light_theme">@drawable/ic_circle</drawable>
    <drawable name="ic_key_ime_action_back_pressed_material_light_theme">@drawable/ic_circle</drawable>
    <!-- Shift -->
    <drawable name="ic_bar_green_material_light_theme">@drawable/ic_bar</drawable>
    <drawable name="ic_key_shift_narrow_on_material_light">@drawable/ic_shift</drawable>
</resources>
